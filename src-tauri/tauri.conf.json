{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "comet",
  "version": "0.1.0",
  "identifier": "com.comet.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "comet",
        "width": 1280,
        "height": 720
      }
    ],
    "security": {
      "csp": "default-src 'self' ws: wss:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ]
  }
}
